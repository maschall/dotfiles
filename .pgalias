# backup
# pg_dump -d mydb -n public --format=custom -f mydb.pgdmp

function backup_pg() {
  pg_dump -d $1 -n public -x -F c -f ${2:-backup}.pgdmp
}

function restore_pg() {
  pg_restore -d $2 -F c -1 --no-owner $1
}

